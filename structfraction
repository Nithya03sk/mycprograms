#include<stdio.h>
struct fraction
{
    int numerator;
    int denominator;
    
};
struct fraction input()
{
    struct fraction f;
    printf("enter fraction \n");
    scanf("%d%d",&f.numerator,&f.denominator);
    return f;
}
int lcm(int a,int b)
{
int temp=1,i;
for(i=0;i<=a*b;i++)
if(temp%a==0&&temp%b==0)
return temp;
temp++;

}
Void add(int a,int b,int c)
{
  p=(c*a)/b;
  return p;
}
int output(int a,int b,int c)
{
printf("addition of fraction is",(a+b)/c);
}
int main()
{
    struct  fraction f1=input();
    struct fraction f2=input();
    l=lcm(f1.denomimator,f2.denominator);
    a=add(f1.numerator,f1.denominator,l);
    b=add(f2.numerator,f2.denominator,l);
    output(a,b,l);
}
